<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:orientation="vertical" 
    android:background="@drawable/green"
    >
    
          <TextView
              android:paddingTop="10dp"
android:text="For Men and Women"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:textSize="15dp"
android:gravity="center"

android:id="@+id/sports_formenorwomen"
/>
       <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="fill_parent"
	android:layout_width="fill_parent"
	android:layout_below="@+id/sports_formenorwomen"
	android:gravity="center_horizontal"
	android:paddingLeft="20dp"
	>
	<TableRow>
<TextView
android:text="Registration Fees:"
android:width ="150px"
android:textSize="15dp"
/>
<TextView
android:text="1000"
android:width="150px" 
android:layout_height="wrap_content"
android:paddingBottom="5px"
android:id="@+id/sports_fees"
/>
</TableRow>
<TextView
    android:textSize="15dp"
android:height="10px"
android:width ="100px"/>
	
	<TableRow>
<TextView
android:text="Team Size:"
android:textSize="15dp"
android:width ="150px"/>
<TextView
android:text="1000"
android:width="150px"
android:id="@+id/sports_size"
 />
</TableRow>

    </TableLayout>      
</RelativeLayout>